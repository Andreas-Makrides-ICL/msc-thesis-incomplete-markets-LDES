   author = {Jacqueline A. Dowling and Katherine Z. Rinaldi and Tyler H. Ruggles and Steven J. Davis and Mengyao Yuan and Fan Tong and Nathan S. Lewis and Ken Caldeira},
   doi = {10.1016/j.joule.2020.07.007},
